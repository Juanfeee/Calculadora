<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:gravity="center"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <GridLayout
        android:padding="5dp"
        android:layout_marginHorizontal="50dp"
        android:background="@color/black"
        android:layout_width="match_parent"
        android:columnCount="3"
        android:layout_height="wrap_content">

        <TextView
            android:layout_columnSpan="1"
            android:textColor="@color/white"
            android:layout_marginTop="50sp"
            android:textSize="30sp"
            android:id="@+id/txtSigno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="signo" />
        <TextView
            android:textColor="@color/white"
            android:layout_columnSpan="2"
            android:layout_marginTop="50sp"
            android:textSize="30sp"
            android:id="@+id/txtEcuacion"
            android:layout_gravity="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="ecuacion" />
        <TextView
            android:textColor="@color/white"
            android:layout_columnSpan="3"
            android:layout_gravity="end"
            android:textSize="30sp"
            android:id="@+id/txtNumeros"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="resultado" />
    </GridLayout>

    <LinearLayout
        android:gravity="bottom|center"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <GridLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="3">
            <Button
                android:background="@color/gris"
                android:textColor="@color/black"
                android:layout_margin="4dp"
                android:textSize="30sp"
                android:text="1"
                android:id="@+id/btnNumero1"
                android:layout_width="70dp"
                android:layout_height="70dp"/>
            <Button
                android:background="@color/gris"
                android:textColor="@color/black"
                android:layout_margin="4dp"
                android:textSize="30sp"
                android:text="2"
                android:id="@+id/btnNumero2"
                android:layout_width="70dp"
                android:layout_height="70dp"/>
            <Button
                android:background="@color/gris"
                android:textColor="@color/black"
                android:layout_margin="4dp"
                android:textSize="30sp"
                android:text="3"
                android:id="@+id/btnNumero3"
                android:layout_width="70dp"
                android:layout_height="70dp"/>
            <Button
                android:background="@color/gris"
                android:textColor="@color/black"
                android:layout_margin="4dp"
                android:textSize="30sp"
                android:text="4"
                android:id="@+id/btnNumero4"
                android:layout_width="70dp"
                android:layout_height="70dp"/>
            <Button
                android:background="@color/gris"
                android:textColor="@color/black"
                android:layout_margin="4dp"
                android:textSize="30sp"
                android:text="5"
                android:id="@+id/btnNumero5"
                android:layout_width="70dp"
                android:layout_height="70dp"/>
            <Button
                android:background="@color/gris"
                android:textColor="@color/black"
                android:layout_margin="4dp"
                android:textSize="30sp"
                android:text="6"
                android:id="@+id/btnNumero6"
                android:layout_width="70dp"
                android:layout_height="70dp"/>
            <Button
                android:background="@color/gris"
                android:textColor="@color/black"
                android:layout_margin="4dp"
                android:textSize="30sp"
                android:text="7"
                android:id="@+id/btnNumero7"
                android:layout_width="70dp"
                android:layout_height="70dp"/>
            <Button
                android:background="@color/gris"
                android:textColor="@color/black"
                android:layout_margin="4dp"
                android:textSize="30sp"
                android:text="8"
                android:id="@+id/btnNumero8"
                android:layout_width="70dp"
                android:layout_height="70dp"/>
            <Button
                android:background="@color/gris"
                android:textColor="@color/black"
                android:layout_margin="4dp"
                android:textSize="30sp"
                android:text="9"
                android:id="@+id/btnNumero9"
                android:layout_width="70dp"
                android:layout_height="70dp"
                />
            <Button
                android:background="@color/gris"
                android:textColor="@color/black"
                android:layout_margin="4dp"
                android:textSize="30sp"
                android:text="0"
                android:id="@+id/btnNumero0"
                android:layout_width="70dp"
                android:layout_height="70dp"/>
            <Button
                android:background="@color/gris"
                android:textColor="@color/black"
                android:layout_margin="4dp"
                android:textSize="30sp"
                android:id="@+id/btnLimpiar"
                android:text="Ac"
                android:layout_width="70dp"
                android:layout_height="70dp"
                />
            <Button
                android:background="@color/gris"
                android:textColor="@color/black"
                android:layout_margin="4dp"
                android:textSize="30sp"
                android:id="@+id/btnIgual"
                android:text="="
                android:layout_width="70dp"
                android:layout_height="70dp"
                />
        </GridLayout>
        <GridLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="1">
            <Button
                android:background="@color/gris"
                android:textColor="@color/black"
                android:layout_margin="4dp"
                android:textSize="30sp"
                android:id="@+id/btnSuma"
                android:text="+"
                android:layout_width="70dp"
                android:layout_height="70dp"
                />
            <Button
                android:background="@color/gris"
                android:textColor="@color/black"
                android:layout_margin="4dp"
                android:textSize="30sp"
                android:id="@+id/btnResta"
                android:text="-"
                android:layout_width="70dp"
                android:layout_height="70dp"
                />
            <Button
                android:background="@color/gris"
                android:textColor="@color/black"
                android:layout_margin="4dp"
                android:textSize="30sp"
                android:id="@+id/btnMultiplicacion"
                android:text="X"
                android:layout_width="70dp"
                android:layout_height="70dp"
                />
            <Button
                android:background="@color/gris"
                android:textColor="@color/black"
                android:layout_margin="4dp"
                android:textSize="30sp"
                android:id="@+id/btnDivision"
                android:text="/"
                android:layout_width="70dp"
                android:layout_height="70dp"
                />

        </GridLayout>
    </LinearLayout>

</LinearLayout>